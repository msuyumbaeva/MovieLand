@model MovieLand.ViewModels.Comment.CommentCreateViewModel

<form id="comment-create-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.HiddenFor(item => item.MovieId)
    <div class="form-group">
        <label for="Text" class="control-label">New comment</label>
        <textarea asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="button" value="Create" class="btn btn-primary btn-sm" id="comment-create-btn" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
